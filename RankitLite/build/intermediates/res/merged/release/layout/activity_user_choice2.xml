<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbars="horizontal|vertical"
    android:visibility="visible" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:gravity="top"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        tools:ignore="UselessLeaf" >

        <ImageView
            android:id="@+id/picture_randk"
             android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:contentDescription="User_Image"
            android:maxHeight="120dp"
            android:maxWidth="100dp"
           
            
            android:src="@drawable/pic_serena"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView1"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="normal"
            android:typeface="sans"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/button1"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="@drawable/button_style"
            android:drawableEnd="@drawable/ic_navigation_chevron_right"
            android:drawableRight="@drawable/ic_navigation_chevron_right"
            android:height="40dp"
            android:minHeight="30dp"
            android:minWidth="70dp"
            android:text="@string/Product"
            android:textSize="16sp"
            android:width="200dp" />

        <Button
            android:id="@+id/button2"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/button1"
            android:layout_alignLeft="@+id/button1"
            android:layout_alignStart="@+id/button1"
            android:layout_below="@+id/textView4"
            android:layout_centerInParent="true"
            android:background="@drawable/button_style"
            android:drawableEnd="@drawable/ic_navigation_chevron_right"
            android:drawableRight="@drawable/ic_navigation_chevron_right"
            android:height="40dp"
            android:minHeight="30dp"
            android:minWidth="70dp"
            android:text="@string/Service"
            android:textSize="16sp"
            android:width="200dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/button2"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal|center"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="15sp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button1"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text=""
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="normal"
            android:typeface="sans"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/button3"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignRight="@+id/button2"
            android:layout_below="@+id/textView5"
            android:background="@drawable/button_other"
            android:height="40dp"
            android:minHeight="30dp"
            android:minWidth="70dp"
            android:layout_centerInParent="true"
            android:text="@string/Butt_pick"
            android:width="200dp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:text=" -ranker"
            android:textColor="#ffffff"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_alignStart="@+id/imageView1"
            android:paddingTop="5dp"
            android:text="Daniella"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="italic"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView1"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:paddingTop="5dp"
            android:text="@string/Hello"
            android:textColor="#ffffff"
            android:textSize="18sp"
            tools:ignore="RtlSymmetry,RtlHardcoded" />

    </RelativeLayout>

</ScrollView>